<?xml version="1.0" encoding="utf-8"?>
<!--添加联系人信息-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_createFri_bg"
            android:background="#E1BEE7"
            android:layout_width="match_parent"
            android:alpha="0.7"
            android:layout_height="match_parent" />
            <!--从相册中选择图片-->
            <ImageButton
                android:id="@+id/ib_create_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/hawkeye_pic_big" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="65dp"
                android:src="@drawable/ic_local_see_brown_300_18dp" />
    </FrameLayout>

    <!--姓名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_person_add_black_24dp"
                android:layout_gravity="center_vertical"
                />
            <EditText
                android:id="@+id/et_createFri_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:hint="请输入ta的姓名"
                />
            <ImageButton
                android:id="@+id/iv_createFri_fromContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_perm_contact_calendar_black_24dp"
                android:background="@android:color/transparent"
                android:layout_gravity="center_vertical"
                android:padding="5dp"/>
        </LinearLayout>

        <!--性别-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:weightSum="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_wc_black_36dp"
            android:layout_gravity="center_vertical"/>
        <RadioGroup
            android:id="@+id/rg_createFri_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <RadioButton
                android:id="@+id/rb_createFri_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableLeft="@drawable/gender_male"
                />
            <RadioButton
                android:id="@+id/rb_createFri_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/gender_female"
                android:layout_marginLeft="10dp"/>

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_createFri_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <!--所在组-->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_supervisor_account_purple_600_24dp"
            />
        <Spinner
            android:id="@+id/sp_createFri_group"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:spinnerMode="dialog">
        </Spinner>
    </LinearLayout>
    <!--生日-->
    <LinearLayout
        android:id="@+id/ll_createFri_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_date_range_black_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:lines="1"
            android:id="@+id/et_createFri_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:hint="请选择ta的生日"/>

    </LinearLayout>
    <!--提醒方式-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="4"
        android:rowCount="2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_snooze_red_a700_36dp"
            android:layout_marginLeft="5dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/cb_createFri_theday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:checked="true"
            android:text="生日当天"
            android:layout_column="1"
            android:layout_row="0"/>
        <CheckBox
            android:id="@+id/cb_createFri_pre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提前1天"
            android:layout_column="2"
            android:layout_row="0"/>
        <CheckBox
            android:id="@+id/cb_createFri_pre3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="提前3天"
            android:layout_column="3"
            android:layout_row="0"/>

        <CheckBox
            android:id="@+id/cb_createFri_pre7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="提前7天"
            android:layout_column="1"
            android:layout_row="1"/>
        <CheckBox
            android:id="@+id/cb_createFri_pre15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提前15天"
            android:layout_column="2"
            android:layout_row="1"/>
        <CheckBox
            android:id="@+id/cb_createFri_pre30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提前30天"
            android:layout_column="3"
            android:layout_row="1"/>
    </GridLayout>

    <!--生日-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_phone_iphone_purple_600_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            />
        <EditText
            android:inputType="phone"
            android:id="@+id/et_createFri_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:hint="请输入ta的手机号码"
            />

    </LinearLayout>
    <!--提交 完成设置-->
    <Button
        android:id="@+id/bt_createFri_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="#00bfa5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>