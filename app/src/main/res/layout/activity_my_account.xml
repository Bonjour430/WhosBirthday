<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.cskaoyan.birthday.whobirthday.activity.MyAccountActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_myAccout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4C5DBA"
        android:fitsSystemWindows="true"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:id="@+id/iv_createFri_bg"
            android:background="#E1BEE7"
            android:layout_width="match_parent"
            android:alpha="0.7"
            android:layout_height="match_parent" />
        <!--从相册中选择图片-->
        <ImageButton
            android:id="@+id/ib_account_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/hawkeye_pic_big" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="65dp"
            android:src="@drawable/ic_local_see_brown_300_18dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#eeeeee">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户名:"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_myaccount_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/tv_myaccount_password"
        android:text="修改密码"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="#eeeeee"
        android:clickable="true"
        />



</LinearLayout>
